# Shared Node/React env for docker-compose.yml
# Copy to .env and replace all placeholder secrets.

DOCKERHUB_USERNAME=placeholder-username
IMAGE_TAG=demo

# Replace https://node.example.com with your public frontend origin in cloud.
CORS_ORIGIN=https://node.example.com,http://localhost:7080,http://127.0.0.1:7080

NODE_GATEWAY_BIND_HOST=127.0.0.1
NODE_GATEWAY_PORT=7080

JWT_SECRET=replace-with-strong-jwt-secret
JWT_EXPIRES_IN=1h

DEFAULT_USER_EMAIL=admin@example.com
DEFAULT_USER_PASSWORD=replace-with-strong-demo-password

DB_HOST=postgres
DB_PORT=5432
DB_USER=devops_app
DB_PASSWORD=replace-with-strong-postgres-app-password
DB_NAME=devops_demo

AUDIT_URL=http://audit-service:8084/audit/events
AUDIT_API_KEY=replace-with-strong-audit-key
AUDIT_TIMEOUT_MS=2000

MAILER_URL=http://mailer-service:8083/send
MAILER_API_KEY=replace-with-strong-mailer-key
MAILER_TIMEOUT_MS=5000

NOTIFY_URL=http://notification-service:8090/notify
NOTIFY_API_KEY=replace-with-strong-notify-key
NOTIFY_TIMEOUT_MS=3000
NOTIFY_LOG_LEVEL=INFO

TWILIO_ACCOUNT_SID=replace-with-twilio-account-sid
TWILIO_AUTH_TOKEN=replace-with-twilio-auth-token
TWILIO_FROM_NUMBER=replace-with-twilio-from-number
TWILIO_TIMEOUT_MS=5000
TWILIO_STATUS_CALLBACK_URL=https://api.example.com/notify/twilio/status

SMTP_HOST=replace-with-smtp-host
SMTP_PORT=465
SMTP_USER=replace-with-smtp-username
SMTP_PASS=replace-with-smtp-password
SMTP_SECURE=true
SMTP_FROM=replace-with-smtp-from-address
